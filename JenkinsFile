pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creation') // Jenkins credentials ID for Docker Hub
        DOCKERHUB_USERNAME = "${DOCKERHUB_CREDENTIALS_USR}"       // Username from credentials
        IMAGE_NAME = 'simple-node-app'                             // Docker image name
        REPOSITORY_URL = 'https://github.com/21bcon607/simple-node-app.git' // GitHub repo URL
        BRANCH_NAME = 'main'                                        // GitHub branch
    }

    stages {
        stage('Pull Latest Code') {
            steps {
                git branch: "${BRANCH_NAME}", url: "${REPOSITORY_URL}"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest ."
            }
        }

        stage('Login to Docker Hub') {
            steps {
                sh "echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_USERNAME} --password-stdin"
            }
        }

        stage('Push Docker Image') {
            steps {
                sh "docker push ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest"
            }
        }
    }

    post {
        success {
            echo '✅ Docker image built and pushed to Docker Hub successfully!'
        }
        failure {
            echo '❌ Pipeline failed during execution.'
        }
    }
}
